<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Sale coupon fo discount</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block cacheable="false" class="Coupon\Target\Controller\Customer\LinkTarget"  name="linktarget" template="Coupon_Target::linktarget.phtml">
            </block>
        </referenceContainer>
    </body>
</page>