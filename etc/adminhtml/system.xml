<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="target" translate="label" sortOrder="10">
            <label>target</label>
        </tab>
        <section id="target" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>target</label>
            <tab>target</tab>
            <resource>Coupon_Target::target_configuration</resource>
            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>General Configuration</label>
                <field
                        id="value"
                        translate="label"
                        type="text"
                        sortOrder="1"
                        showInDefault="1"
                        showInWebsite="0"
                        showInStore="0"
                >
                    <label>Discount for unregistered</label>
                    <comment>discount percentage for link invited users</comment>
                    <validate>validate-not-negative-number</validate>
                </field>
                <field
                        id="value2"
                        translate="label"
                        type="text"
                        sortOrder="1"
                        showInDefault="1"
                        showInWebsite="0"
                        showInStore="0"
                >
                    <label>Discount for registered</label>
                    <comment>discount percentage for invite link owner</comment>
                    <validate>validate-not-negative-number</validate>
                </field>
            </group>
        </section>
    </system>
</config>